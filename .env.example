# Mail E2E Exporter
# Copy to .env and adjust values
MAIL_E2E_EXPORTER_PORT=9782

# Optional API key for non-metrics endpoints (e.g., future trigger endpoints)
API_KEY=

# Basic Auth for /metrics (recommended)
METRICS_USER=metrics
METRICS_PASS=changeme

# Path to YAML config inside the container
CONFIG_PATH=/app/config.yaml

# Create example config file on first run if none exists
WRITE_EXAMPLE_CONFIG=true

# Enable verbose logging to see SMTP/IMAP steps in Docker logs
DEBUG=false

# Example mail credentials (fill as needed)
# Local domain test account
CUSTOMMAILDOMAIN_SMTP_USER=mailtest@b-ramos.de
CUSTOMMAILDOMAIN_SMTP_PASS=your_smtp_password
CUSTOMMAILDOMAIN_IMAP_PASS=your_imap_password
CUSTOMMAILDOMAIN_IMAP_USER=your_imap_username

# Gmail app password (for accounts using Gmail)
GMAIL_APP_USER=your@gmail.com
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx
